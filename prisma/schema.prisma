// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String @id @default(uuid())
  experience Int
}

model Challenges {
  id          String @id @default(uuid())
  type        String @unique
  description String
  amount      Int

  @@map("challenges")
}
